<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F4E6"
    tools:context=".BusinessDetails">

    <TextView
        android:id="@+id/detailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Brandon Que Z23479912"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/businessName"
        android:layout_width="371dp"
        android:layout_height="79dp"
        android:layout_marginTop="44dp"
        android:text="Business Name"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsTitle" />

    <TextView
        android:id="@+id/businessRating"
        android:layout_width="225dp"
        android:layout_height="43dp"
        android:layout_marginTop="4dp"
        android:text="Rating: "
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businessName" />

    <TextView
        android:id="@+id/textLocation"
        android:layout_width="297dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:text="Brandon Que Z23479912"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFavorite" />

    <TextView
        android:id="@+id/businessAddress"
        android:layout_width="394dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:text="Address: "
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businessRating" />

    <TextView
        android:id="@+id/businessPhone"
        android:layout_width="390dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:text="Phone: "
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businessAddress" />

    <TextView
        android:id="@+id/businessCategory"
        android:layout_width="402dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="Category: "
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businessPhone" />

    <TextView
        android:id="@+id/businessLatitude"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Latitude: "
        app:layout_constraintEnd_toStartOf="@+id/businessLongitude"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businessCategory"
        android:textAlignment="center"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/businessLongitude"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Longitude: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/businessLatitude"
        app:layout_constraintTop_toBottomOf="@+id/businessCategory"
        android:textAlignment="center"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/btnMapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="MAPVIEW"
        app:layout_constraintEnd_toStartOf="@+id/btnFavorite"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/businessLatitude" />

    <Button
        android:id="@+id/btnFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnMapView"
        app:layout_constraintTop_toBottomOf="@+id/businessLongitude" />

</androidx.constraintlayout.widget.ConstraintLayout>